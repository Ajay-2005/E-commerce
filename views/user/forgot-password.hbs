<div class="d-flex justify-content-center align-items-start mt-4" style="height: 100vh;">
  <div class="card shadow-sm ">
    <div class="card-body">
      <div class="mb-4">
        <h5>Forgot Password?</h5>
        <p class="mb-2">Enter your registered email ID to reset the password
        </p>
      </div>

      <form class="mb-3" action="/forgot-password" method="post">
        <label for="email" class="form-label">Email</label>
        <input type="email" id="email" class="form-control" name="email" placeholder="Enter Your Email" required="">
         <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <div class="mb-3 d-grid mt-4">
          <button type="submit" class="btn btn-primary">
            Send Email
          </button>
        </div>

        <span>Don't have an account? <a href="/signup">sign in</a></span>
      </form>
    </div>
  </div>
</div>