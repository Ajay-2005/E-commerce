<section style="background-color: #fff;">
  <div class="container py-5">

    <div class="row">
      {{#each product}}
      <div class="col-md-12 col-lg-4 mb-4 mb-lg-0 mt-4 col-sm-6">
        <div class="card">
          
          <a href="/product-details/{{this.name}}"> <img src="/product-images/{{this._id}}.jpeg"
              class="card-img-top" alt="Laptop" width="250px" height="250px" /></a>
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <p class="small">{{this.category}}</p>

            </div>

            <div class="d-flex justify-content-between mb-3">
              <h5 class="mb-0">{{this.name}}</h5>
              <h5 class="text-dark mb-0">{{this.Price}}</h5>
            </div>

            <div class="d-flex justify-content-between mb-2">
              <p class="text-muted mb-0">Available: <span class="fw-bold">12500</span></p>
              <div class="ms-auto text-warning">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
              </div>

            </div>
            <a href="#" class="btn btn-warning shadow-0 mx-3 my-3"> Buy now </a>
            <a href="/add-to-cart/{{this._id}}" class="btn btn-primary shadow-0 mx-3 my-3"> <i class="me-1 fa fa-shopping-basket"></i> Add to
              cart </a>
          </div>
        </div>
      </div>

      {{/each}}
    </div>

  </div>
</section>