<section>
  <div class="container-fluid mt-4">
    <div class="row">
      {{#each product}}
      <div class="col-md-3 col-sm-6">
        <div class="card mb-4">
          <img src="/product-images/{{this._id}}.jpeg" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">{{this.Price}}</p>
            <a href="#" class="btn btn-primary btn-sum">Add to Cart</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>
